# Vaultwarden Configuration
BW_DOMAIN=vault.example.com
BW_NAME=vault
BW_PORT=8443
BW_IP=172.20.0.2

# Docker Network Configuration
DOCKER_NET=your-custom-docker-network

# Cloudflare Configuration
CF_NAME=vault-tunnel
CF_TOKEN=your-cloudflare-tunnel-token
CF_IP=172.20.0.3

# SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_FROM=vault@example.com
SMTP_UN=your-smtp-username
SMTP_PW=your-smtp-password

# Admin Token will be auto-generated
# ADMIN_TOKEN=

# SSL Configuration (for non-Cloudflare deployment)
SSL_COUNTRY=US
SSL_STATE=YourState
SSL_LOCALITY=YourCity
SSL_ORG=YourOrganization
SSL_CN=vault.local
SSL_EMAIL=admin@example.com

# Security Configuration
ENABLE_ADMIN_PAGE=true
DISABLE_REGISTRATION=false
SIGNUPS_VERIFY=true
DOMAIN_ORIGIN=https://vault.example.com
ENABLE_SSL=true

# Backup Configuration
BACKUP_DIR=/opt/bitwarden/backups
BACKUP_RETENTION_DAYS=30
